<div class="container">
<p id="notice" class="text-success"><%= notice %></p>

<h1>Listing Works</h1>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Year</th>
			<th>Category</th>
			<th>Number of photos</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @works.each do |work| %>
			<tr>
				<td><%= work.title %></td>
				<td><%= work.description %></td>
				<td><%= work.year %></td>
				<td><%= work.category.name %></td>
				<td><%= work.photos.count %></td> 
				<td><%= link_to 'Show', work %></td>
				<td><%= link_to 'Edit', edit_work_path(work) %></td>
				<td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Work', new_work_path %>
</div>