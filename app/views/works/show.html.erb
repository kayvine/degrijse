<div class="container">
<p id="notice" class="text-success"><%= notice %></p>

<h3><%= @work.title %></h3>

<p>
	<strong>Description:</strong>
	<%= @work.description %>
</p>

<p>
	<strong>Category:</strong>
	<%= @work.category.name %>
</p>

<p>
	<strong>Photo(s):</strong><br>
	<% for photo in @work.photos %>
		<%= photo.title %><br>
		<%= image_tag photo.image.url(:medium) %>
	<% end %>
</p>

<br>
<%= link_to 'Edit', edit_work_path(@work) %> |
<%= link_to 'Back', works_path %>
</div>