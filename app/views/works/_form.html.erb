<%= form_for @work, html: { :multipart => true } do |f| %>
	<% if @work.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>
			<ul>
			<% @work.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>
	<div class="field">
		<%= f.label :category %><br>
		<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Please select") %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>