<%= simple_form_for @message, url: root_path do |f| %>
	<div class="form-group">
		<%= f.input_field :name, placeholder: "Je naam *", class: 'form-control' %>
		<p class="help-block text-danger"></p>
	</div>
	<div class="form-group">
		<%= f.email_field :email, placeholder: "Jouw e-mail *", class: 'form-control' %>
		<p class="help-block text-danger"></p>
	</div>
	<div class="form-group">
		<%= f.input_field :content, as: :text, placeholder: "Laat je bericht achter *", class: 'form-control' %>
		<p class="help-block text-danger"></p>
	</div>
	<div class="clearfix"></div>
	<div class="form-group">
		<%= f.button :submit, 'Send message', class: "btn btn-lg" %>
	</div>
<% end %>