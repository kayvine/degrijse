<div class="container">
<%= simple_form_for @message, url: contact_path do |f| %>
	<h3>Contact form</h3>
	<div class="form-group">
		<%= f.input_field :name, placeholder: "Je naam *", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.input_field :email, placeholder: "Jouw e-mail *", class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.input_field :content, as: :text, placeholder: "Laat je bericht achter *", class: 'form-control' %>
	</div>
	<div class="clearfix"></div>
	<div class="form-group">
		<%= f.button :submit, 'Send message', class: "btn btn-lg" %>
	</div>
<% end %>
</div>